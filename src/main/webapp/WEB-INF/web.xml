<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Box Find It!</display-name>
    <servlet>
        <servlet-name>authServlet</servlet-name>
        <servlet-class>servlets.BoxAuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listServlet</servlet-name>
        <servlet-class>servlets.BoxListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listServlet</servlet-name>
        <url-pattern>/find</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>jsonServlet</servlet-name>
        <servlet-class>servlets.JsonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jsonServlet</servlet-name>
        <url-pattern>/query.json</url-pattern>
    </servlet-mapping>

</web-app>

